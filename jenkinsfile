def checkout(){
	dir (BUILD_ID){
		checkout scmGit(branches: [[name: '*/test']], extensions: [], userRemoteConfigs: [[credentialsId: 'git-access', url: 'https://github.com/bhanunew9910/awesone-repository/']])
}
}
node {
	try{
		stage('file execution'){
		sh "cd ${BUILD_ID} && ${Test_Case}"
}
}
	catch(e){
	currentBuild.result="WARM"
}
	stage('makeing a file'){
	sh "cd ${BUILD_ID} && touch test.demo.txt"
}
	stage('making a test.demo zip file'){
	sh "cd ${BUILD_ID} && zip -r demo.zip test.demo.txt"
}
	stage('sending mail to team'){
	emailext attachLog: true, attachmentsPattern: '$BUILD_ID/demo.zip', body: '''Hi team,
we create a successfully zip file with build number ${BUILD_NUMBER} and job name is ${JOB_NAME}''', subject: 'zip file is created', to: 'bhanunew9910@gmail.com'
}
}
